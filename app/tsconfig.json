{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "target": "es2019",
    "module": "commonjs",
    "lib": [
      "esnext",
      "es2020.Promise",
      "es2020",
      "es2019",
      "es2018",
      "es2017",
      "es2016",
      "es6",
      "dom"
    ],
    "types": ["node"],
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*"
  ]
}
